<div class="panel panel-default Fnd-bg">
  
  
  <div class="post-container">  
    <%= form_for(@newPost) do |f| %>
      
      <div class="col-sm-1 user-avatar-title">
        <img class="img-rounded user-avatar-post" src="/icon.png"></img> 
      </div>
      
      <div class="post-box">  
        <%= f.text_field :content, autofocus: true, :id => "form-click",  :class => "form-control form-transform", :style => "color: rgba(102,102,102,1);" %>
      </div>
      
      <div class="post-action">
        <%= f.submit "Post", class: "btn btn-submit" %>
      </div>
      
    <% end %>
  </div> 
  
  
  <script>
    $("#form-click").click(function() {
      $('.form-transform').toggleClass('form-transform-active');
    });
  </script>
  
  
  
  
</div>    
