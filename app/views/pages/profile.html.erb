<!-- begin row 1. -->
<div class="row">
    <div class="col-xs-12">
        <div class="jumbotron">
            
        </div>
    </div>
</div>
<!-- begin row 2, -->
<div class="row">
    <div class="col-xs-3">
        <div class="panel panel-default">
            <div class="panel-body panel-margin-container">
                <p>Cover Image/360 image/360 video</p>
                <hr>
                <p>Current active user</p>
                <hr>
                <p>User stats</p>
                <hr>
                <p>
                
                <ol class="breadcrumb">
                <li class="active">
                <a href="#">
                <span style="color:  #66cdaa; font-size: 22pt" data-toggle="tooltip" data-placement="bottom" title="Audio">
                <i class="fa fa-headphones" aria-hidden="true"></i>
                </span>
                </a>
                </li>
                        	
                <li class="active">
                <a href="#">
                <span style="color: #70b0c3; font-size: 22pt" data-toggle="tooltip" data-placement="bottom" title="text">
                <i class="fa fa-file-text-o" aria-hidden="true"></i>
                </span>
                </a>
                </li>
                    
                <li class="active">
                <a href="#">
                <span style="color: #f7a868; font-size: 22pt" data-toggle="tooltip" data-placement="bottom" title="Media">
                <i class="fa fa-video-camera" aria-hidden="true"></i>
                </span>
                </a>
                </li>
                        	
                <li class="active">
                <a href="#">
                <span style="color: #9c3e60; font-size: 22pt" data-toggle="tooltip" data-placement="bottom" title="Image">
                <i class="fa fa-camera-retro" aria-hidden="true"></i>
                </span>
                </a>
                </li>
                </ol>  
                
                </p>
            </div>
        </div>
    </div>

     <!-- Center Panel begins here, -->
    <div class="col-xs-6">
         <%= render '/components/post_form' %><br>
        <% for @p in @posts %>
            
            <div class="panel panel-default">
                <div class="panel-body">       
                    <div class="col-sm-1">
                        <img class="img-rounded user-avatar" src="/icon.png"></img> 
                    </div>
                    
                    <div class="col-sm-10">
                        <p class="post-title"><%= User.find(@p.user_id).username %></p>
                        <p class="post-content"><%= @p.content %></p>
                    </div>
                    
                    <div class="col-sm-11">
                        <p class="post-tags">Tags</p>
                    </div>
                    
                    <div class="col-sm-12">
                        <p class="post-links">Links</p>
                    </div>
                </div>
            </div>    
        <% end %>
    </div>
    
    
    
    
    
    <div class="col-xs-3">
        <div class="panel panel-default" >   
            <div class="panel-body">
               <p>Trends</p>
            </div>
        </div>
    
        <div class="panel panel-default" >   
            <div class="panel-body">
               <p>Endorsed</p>
            </div>
        </div>
    </div>
</div>


