<% if !user_signed_in? # if the user is not signed in, render this %>
 
  <span class="chat">
    <span class="tg-badge">Login</span>
  </span>
 
  <style>
   .chat {
      position: absolute;
      left: calc(50% - (100px / 2));
      top: calc(50% - (100px / 2));
    }
    
    .tg-badge {
      background: #E74C3C;
      border-radius: 50%;
      height: 100px;
      width: 100px;
      border: 2px solid rgba(255, 255, 255, 1);
      position: absolute;
      box-shadow: 1px 1px 5px rgba(0, 0, 0, .3);
      transition: all .5s ease-in-out;
    }
    .tg-badge:hover {
      transform: scale(1.2);
    }
    .tg-badge:after, .tg-badge:before {
      content: '';
      position: absolute;
      top: -2px;
      left: -2px;
      opacity: 0;
      border-radius: 50%;
      width: 100%;
      height: 100%;
    }
    .tg-badge:after {
      animation: sonar 1.5s infinite 1s;
      border: 2px solid rgba(255, 255, 255, .6);
    }
    .tg-badge:before {
      animation: sonar 1.5s infinite 1.5s;
      border: 2px solid rgba(255, 255, 255, .3);
    }
    @keyframes sonar { 
      0% { transform: scale(1); opacity: 0; }
      50% { transform: scale(2); opacity: 1; }
      100% { transform: scale(3); opacity: 0; }
    }
  </style>
    
    
    
<% else #if the user is signed in, render the following HTML %>
<script>document.location = "/home"</script>
<% end %>