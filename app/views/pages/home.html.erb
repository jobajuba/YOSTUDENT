<div class="row">
    <!-- Left Panel 1 begins -->
    <div class="col-xs-3">
        <div class="panel panel-default">
            <div class="panel-body">
               <p>stats</p>
            </div>
        </div>
        <!--Left Panel 2 begins -->
        <div class="panel panel-default" >   
            <div class="panel-body">
                <p>Endorsed</p>
            </div>
         </div>
    </div>
    
    
    <!-- Center Panel begins here, -->
    <div class="col-xs-6">
        <% for @p in @posts %>
            <div class="panel panel-default">    
                <div class="panel-body">
                   
                   <!-- Thumbnail inside center panel begins here -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="thumbnail">
                                <img src="<%= @p.content %>" alt="...">
                                    <div class="caption">
                                        <h3>Shared content is shown here</h3>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>

 
     <!-- Right button group Panel 1 begins here -->
    <div class="col-xs-3">
        <div class="panel panel-default" > 
            <div class="row">
                <div class="col-md-12">
        
                    <div class="btn-group btn-group-justified"  role="group" aria-label="Basic example">
                        <div class="btn-group" data-toggle="buttons" role="group">
                            <button type="button" class="btn btn-second">
                                <span class="label">
                                    <i class="fa fa-users" STYLE="color: #ff1919; font-size: 20pt" aria-hidden="true"></i>
                                        <br><span class="new_post_label_text">People</span>
                                </span>
                            </button>
                        </div>
                        
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-secondary">
                                <span class="label">
                                    <i class="fa fa-camera-retro" STYLE="color: #8c198c; font-size: 20pt" aria-hidden="true"></i>
                                        <br><span class="new_post_label_text">Photo</span>
                                </span>
                            </button>
                        </div>
                        
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-secondary">
                                <span class="label">
                                    <i class="fa fa-headphones" STYLE="color: #ffff19; font-size: 20pt" aria-hidden="true"></i>
                                        <br><span class="new_post_label_text">Music</span>
                                </span>
                            </button>
                        </div>
                        
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-secondary">
                                <span class="label">
                                    <i class="fa fa-file-text-o"  STYLE="color: #198c19; font-size: 20pt" aria-hidden="true"></i>
                                       <br><span class="new_post_label_text">Text</span>
                                </span>
                            </button>
                        </div>
                        
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-secondary">
                                <span class="label">
                                    <i class="fa fa-video-camera" STYLE="color: #00FFFF; font-size: 20pt" aria-hidden="true"></i>
                                        <br><span class="new_post_label_text">Video</span>
                                </span>
                            </button>
                        </div>    
                    </div>
                </div>    
            </div>
        </div>
        
         
        
        <!-- Panel 2 connects, -->
        <div class="panel panel-default" >   
            <div class="panel-body">
                <p>
                    <ol class="breadcrumb">
                        <li>
                            <a href="#">
                                <span style="color: #8c198c; font-size: 20pt" data-toggle="tooltip" data-placement="bottom" title="Active projects">
                                    <i class="fa fa-folder-open" aria-hidden="true"></i>
                                </span>
                            </a>
                        </li>
                        <li class="active">
                            <a href="#">
                                <span style="color: #8c198c; font-size: 20pt" data-toggle="tooltip" data-placement="bottom" title="Begin new project">
                                    <i class="fa fa-user-plus" aria-hidden="true" ></i>
                                </span>
                            </a>
                        </li>
                        
                        <li class="active">
                            <a href="#">
                                <span style="color: #8c198c; font-size: 20pt" data-toggle="tooltip" data-placement="bottom" title="Hub">
                                    <i class="fa fa-grav" aria-hidden="true" ></i>
                                </span>
                            </a>
                        </li>
                        <li class="active">
                            <a href="#">
                                <span style="color: #8c198c; font-size: 20pt" data-toggle="tooltip" data-placement="bottom" title="Accomplice">
                                    <i class="fa fa-superpowers" aria-hidden="true"></i>
                                </span>
                            </a>
                        </li>
                    </ol>
                </p>
            </div>
        </div>
    </div>
</div>

  

