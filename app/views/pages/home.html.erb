<div class="row">
    
    <div class="col-xs-3">
        <div class="panel panel-default">
            <div class="panel-body">
               <p>stats</p>
            </div>
        </div>
        <!-- Panel 2 connects, -->
        <div class="panel panel-default" >   
                <div class="panel-body">
                   <p>Endorsed</p>
                </div>
         </div>
    </div>
    
    
    
    <div class="col-xs-6">
        <li class="post_container new_post_buttons_container" id="new_post_buttons">
            <div class="" id="new_post">
                <nav id="post_buttons" class="post_bu" role="menu" data-js-postbuttons="">
                    <a href="/new/text?redirect_to=%2Fdashboard" class="new_post_label" id="new_post_label_text" role="menuitem" data-post-type="regular" data-post-endpoint="text" data-js-text="">
                        <i class="icon_post_text"></i><span class="new_post_label_text">Text</span></a>
                </nav>
            </div>
        </li>
       
       
        <span class="label">
            <i class="fa fa-users" STYLE="color: #ff1919; font-size: 50pt" aria-hidden="true"></i>
        </span>
        
        <span class="label">
            <i class="fa fa-video-camera" STYLE="color: #00FFFF; font-size: 50pt" aria-hidden="true"></i>
        </span>
        
        <span class="label">
            <i class="fa fa-camera-retro" STYLE="color: #8c198c; font-size: 50pt" aria-hidden="true"></i>
        </span>
        
        <span class="label">
            <i class="fa fa-headphones" STYLE="color: #ffff19; font-size: 50pt" aria-hidden="true"></i>
        </span>
        
        <span class="label">
            <i class="fa fa-file-text-o"  STYLE="color: #198c19; font-size: 50pt" aria-hidden="true"></i>
        </span>
        
    
        <% for @p in @posts %>
            <div class="panel panel-default">    
                <div class="panel-body">
                   
                   
                   
                       
                    <div class="row">
                        <div class="col-md-12 col-md-12">
                            <div class="thumbnail">
                                <img src="<%= @p.content %>" alt="...">
                                    <div class="caption">
                                        <h3>Shared content is shown here</h3>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>

    <div class="col-xs-3">
        <div class="panel panel-default" >   
            <div class="panel-body">
               <p>about</p>
            </div>
        </div>
