<style type="text/css">
a:link    {
  /* Applies to all unvisited links */
  text-decoration:  none;
  font-weight:      bold;
  background-color: none;
  color:            blue;
  } 

</style>


<div class="row container-fluid">
    <div class="col-xs-3 panel-top">
        <div class="panel panel-default">
            <div class="panel-body">
                <p>
                    <div class="col-sm-1">
                        <img class="img-rounded user-avatar-home" src="/icon.png"></img> 
                    </div>
                
                    <div class="col-sm-2 user-name-home"> 
                        <a class="" accesskey="" data-gt="" href="" title="" data-testid="" ><img class="" src="" alt="" id="">
                            <span href="/user/<%= current_user.username %>"><%= current_user.username %></span>
                        </a>
                    </div>
                    
                    <div class="pop-tab">
                        Followers Following Anchors
                        <p></p>
                        <p> Collabotations Sonsors</p>
                    </div>
    
                
                    <div class="act-tab">
                        
                        Recent projects
                        <p>Examples on highlight</p>
                        <ol class="breadcrumb">
                        <li class="active">
                        <a href="#">
                        <span style="color:  #66cdaa; font-size: 22pt" data-toggle="tooltip" data-placement="bottom" title="Audio">
                        <i class="fa fa-headphones" aria-hidden="true"></i>
                        </span>
                        </a>
                        </li>
                        
                                	
                        <li class="active">
                        <a href="#">
                        <span style="color: #70b0c3; font-size: 22pt" data-toggle="tooltip" data-placement="bottom" title="text">
                        <i class="fa fa-file-text-o" aria-hidden="true"></i>
                        </span>
                        </a>
                        </li>
                            
                        <li class="active">
                        <a href="#">
                        <span style="color: #f7a868; font-size: 22pt" data-toggle="tooltip" data-placement="bottom" title="Media">
                        <i class="fa fa-video-camera" aria-hidden="true"></i>
                        </span>
                        </a>
                        </li>
                                	
                        <li class="active">
                        <a href="#">
                        <span style="color: #9c3e60; font-size: 22pt" data-toggle="tooltip" data-placement="bottom" title="Image">
                        <i class="fa fa-camera-retro" aria-hidden="true"></i>
                        </span>
                        </a>
                        </li>
                        </ol>  
                    </div>
                </p>
                
                
                <div class="feed">
                </div>
                
            </div>
        </div>
    </div>

       <!-- Center Panel begins here, -->
    <div class="col-xs-6">
        <%= render '/components/post_form' %><br>
        <% for @p in @posts %>
            
            <div class="panel panel-default content-panel">
                <div class="panel-body ">       
                    <div class="col-sm-1">
                        <img class="img-rounded user-avatar-profile" src="/icon.png"></img> 
                    </div>
                    
                    <div class="col-sm-10">
                        <p class="post-title">
                            <span class="post-owner-profile"><%= User.find(@p.user_id).username %></span>  
                            <span class="post-date">@<%= @p.created_at.to_formatted_s(:short) %></span>
                        </p>
                        <p class="content-container">
                            <span class="post-content-profile container-fluid"><%= @p.content %></span>
                        </p>
                    </div>
                    
                    <div class="ancor-icon">
                        <span class="#" data-toggle="tooltip" data-placement="top" title="Anchor workspace" >
                                <i class="fa fa-anchor" aria-hidden="true"></i>
                        </span>
                    </div>
                 
                    <div class="col-sm-11">
                        <p>
                            <span class="post-tags">Tags</span>
                        </p>
                    </div>
                    
                    <div class="col-sm-12">
                        <p> 
                            <div class="post-links">
                                
                                <span class="reply-icon">
                                    <i class="fa fa-reply" aria-hidden="true"></i>
                                    <span class="reply-text">Reply</span>
                                </span>
                                
                                <span class="like-icon">
                                    <i class="fa fa-heart" aria-hidden="true"></i>
                                    <span class="like-text">Like</span>
                                </span>
                                <span class="share-icon">
                                    <i class="fa fa-retweet" aria-hidden="true"></i>
                                    <span class="share-text">Share</span>
                                </span>
                                <span class="more-icon">
                                    <i class="fa fa-bars" aria-hidden="true"></i>
                                    <span class="like-anc">More</span>
                                </span>
                                
                            </div>
                        </p>
                    </div>
                    
                </div>
            </div>    
        <% end %>
    </div>
        
 
     <!-- Right button group Panel 1 begins here -->
    <div class="col-xs-3 panel-top">
        <div class="panel panel-default">
            <div class="panel-body panel-margin-container">
               
               <div class="rec-panel-top">
                   <div class="rec-container">
                       <div class="rec-content">
                           <ul>
                               <span class="rec-guide">
                                   Trending
                                   
                                   <a>
                                       <!-- Displayed icon -->
                                       <span class="rec-icon">
                                           <i class="fa fa-thumbs-up" aria-hidden="true"></i>
                                       </span>
                                       
                                       <!-- Displayed name -->
                                       <span class="rec-display"></span>
                                   </a>
                                   <hr class="rec-guide">
                               </span>
                               
                               <span class="rec-guide">
                                   Recommended Projects
                                   
                                   <a>
                                       <!-- Displayed icon -->
                                       <span class="rec-icon">
                                           
                                           <span class="glyphicons glyphicons-camp-fire"></span>
                                       </span>
                                       
                                       <!-- Displayed name -->
                                       <span class="rec-display"></span>
                                   </a>
                                   <hr class="rec-guide">
                               </span>
                               
                               <span class="rec-guide">
                                   Active tutors
                                   
                                   <a>
                                       <!-- Displayed icon -->
                                       <span class="rec-icon"></span>
                                       
                                       <!-- Displayed name -->
                                       <span class="rec-display"></span>
                                   </a>
                                   <hr class="rec-guide">
                               </span>
                               
                               <span class="rec-guide">
                                   Find a sponsors
                                   
                                   <a>
                                       <!-- Displayed icon -->
                                       <span class="rec-icon"></span>
                                       
                                       <!-- Displayed name -->
                                       <span class="rec-display"></span>
                                   </a>
                               </span>
                           </ul>
                       </div>
                   </div>
               </div>
            </div>
        </div>
        
        <!-- Sub-panel -->
        <div class="panel fixed">
            <div class="panel-body panel-margin-container ad-panel">
                 <div class="rec-panel">
                   <div class="rec-container">
                       <div class="rec-content">
                           <ul>
                                <span class="rec-guide">
                                relevant ads
                                <hr class="rec-guide">
                            </ul>
                        </div>
                    </div>
                </div>    
                
                
            </div>
        </div>
    </div>
</div>

  

