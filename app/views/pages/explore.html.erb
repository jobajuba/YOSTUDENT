<div class="row">
   <div class="col-md-6 col-md-offset-3">
        <% for @p in @posts %>
            <div class="panel panel-default">    
                <div class="panel-body">
                    
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="thumbnail">
                                <img src="<%= @p.content %>" alt="">
                                <div class="caption">
                                    <h3 class="text-center">Recommended post</h4>
                                    <p>
                                       <%= @p.content %>
                                    </p>
                                    <p class="text-center">
                                        <i class="fa fa-thumbs-o-up votes"></i><i class="fa fa-thumbs-o-down votes"></i>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    
    
    
    
     <!-- Right button group Panel 1 begins here -->
    <div class="col-xs-3">
        <div class="panel panel-default" > 
            <div class="row">
                <div class="col-md-12">
                    <!-- Button 1 begins here -->
                    <div class="btn-group btn-group-justified"  role="group" aria-label="Basic example">
                        <div class="btn-group" data-toggle="buttons" role="group">
                            <button type="button" class="btn btn-second">
                                <span class="label">
                                    <i class="fa fa-users" STYLE="color: #ff1919; font-size: 20pt" aria-hidden="true"></i>
                                        <br><span class="new_post_label_text">People</span>
                                </span>
                            </button>
                        </div>
                        <!-- Button 2 begins here -->
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-secondary">
                                <span class="label">
                                    <i class="fa fa-camera-retro" STYLE="color: #8c198c; font-size: 20pt" aria-hidden="true"></i>
                                        <br><span class="new_post_label_text">Photo</span>
                                </span>
                            </button>
                        </div>
                        <!-- Button 3 begins here -->
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-secondary">
                                <span class="label">
                                    <i class="fa fa-headphones" STYLE="color: #ffff19; font-size: 20pt" aria-hidden="true"></i>
                                        <br><span class="new_post_label_text">Music</span>
                                </span>
                            </button>
                        </div>
                        <!-- Button 4 begins here -->
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-secondary">
                                <span class="label">
                                    <i class="fa fa-file-text-o"  STYLE="color: #198c19; font-size: 20pt" aria-hidden="true"></i>
                                       <br><span class="new_post_label_text">Text</span>
                                </span>
                            </button>
                        </div>
                        <!-- Button 5 begins here -->
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-secondary">
                                <span class="label">
                                    <i class="fa fa-video-camera" STYLE="color: #00FFFF; font-size: 20pt" aria-hidden="true"></i>
                                        <br><span class="new_post_label_text">Video</span>
                                </span>
                            </button>
                        </div>    
                    </div>
                </div>    
            </div>
        </div>
        <!-- Panel 2 connects, -->
        <div class="panel panel-default" >   
            <div class="panel-body">
                <p>Recommended</p>
            </div>
        </div>
    </div>
    
    
    
    
    
    
    
    
    
    
    
    
    
</div>


