
    
   <div class="col-xs-3">
        <% for @p in @posts %>
            <div class="panel panel-default">    
                <div class="panel-body">
                    
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="thumbnail">
                                <img src="<%= @p.content %>" alt="">
                                <div class="caption">
                                    <h3 class="text-center">Recommended post</h4>
                                    <p>
                                       <%= @p.content %>
                                    </p>
                                    <p class="text-center">
                                        <i class="fa fa-thumbs-o-up votes"></i><i class="fa fa-thumbs-o-down votes"></i>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>



